{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"declaration": false,
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ES2015",

		"skipDefaultLibCheck": true,
		"skipLibCheck": true,

		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,

		"strict": true
	},
	"exclude": ["node_modules"]
}
